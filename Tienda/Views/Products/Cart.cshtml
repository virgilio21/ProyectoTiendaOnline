@model IEnumerable<Tienda.Models.Product>

@{
    ViewBag.Title = "Carrito";
    decimal subTotal = 0;
}

<h2>Tu carrito</h2>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Descripción
        </th>
        <th>
            Talla
        </th>
        <th>
            Color
        </th>
        <th>
            Modelo
        </th>
        <th>
            Genero
        </th>
        <th>
            Precio
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "DeleteItem", new { id = item.Id })
            </td>
        </tr>
    }

    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
            Subtotal:
        </td>
        <td>
            $@Session["subTotal"]
        </td>
        <td></td>
    </tr>

</table>


